<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %X{req.id} %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>


  <!-- https://www.baeldung.com/logback -->
  <property name="CONTENTSERVLET_LOG_DIR" value="logs/content-servlet"/>
  <property name="CONTENTSERVLET_LOG_FILE" value="content-servlet"/>
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${CONTENTSERVLET_LOG_DIR}/${CONTENTSERVLET_LOG_FILE}.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover -->
      <fileNamePattern>${CONTENTSERVLET_LOG_DIR}/${CONTENTSERVLET_LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>

      <!-- keep 30 days' worth of history capped at 3GB total size -->
      <maxHistory>30</maxHistory>
      <totalSizeCap>3GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %X{req.id} %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>


  <logger name="ru.unisuite.contentservlet" level="WARN"/>

  <root level="WARN">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
  </root>
</configuration>