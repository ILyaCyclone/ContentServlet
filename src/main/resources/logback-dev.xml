<?xml version="1.0" encoding="UTF-8"?>
<!-- to use this set -Dlogback.configurationFile=logback-dev.xml VM option -->
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %X{req.id} %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="ru.unisuite.contentservlet" level="DEBUG"/>

  <root level="WARN">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>